page{
    height: 100%;
}
.content{
    width: 100%;
    height: 100%;
}
.content .scroll_view{
      width: 100%;
      height: 100%; 
      background-color: royalblue;
}
.content .scroll_view view:nth-child(1){
          width: 100%;
          height: 1000rpx;
          background-color: hotpink;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 50px;
}
.content .scroll_view view:nth-child(1) slider{
        width: 400rpx;
        height: 30rpx;
}
.content .scroll_view view:nth-child(2){
          width: 100%;
          height: 1000rpx;
          background-color: yellow;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 50px;
}
.content .scroll_view view:nth-child(3){
          width: 100%;
          height: 1000rpx;
          background-color: red;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 50px;
}
/* 隐藏滚动条 就是隐藏掉在向上移动的时候出现向下的滚动条 */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

