page{
   width: 100% ;
   height: 100%;
}
.container{
   width: 100%;
   height: 100%;
}
.container .title_pic{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .title_pic text{
    margin-top: 30rpx;
    font-size: 40rpx;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-style: normal;
    font-weight: 600;
}
.container .title_pic .imagcontainer{
   margin-top: 30rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.container .title_pic  .imagcontainer image{
      border-radius: 50%;
      border: 1px solid gray;
      width: 400rpx;
      height: 350rpx;
}
.container .title_pic  .imagcontainer text{
  position: absolute;
  z-index: 999;
  opacity: 0.4;
}
.container .personinfo{
     margin-top: 15px;
     width: 100%;
     display: flex;
     flex-direction: column;
}
.container .personinfo text{
  opacity: 0.5;
  width: 100%;
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
