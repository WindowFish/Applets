<view class="container">
    <!-- 图片部分 -->
     <view class="Compass">
          <image src="../../images/img.png"
           mode="aspectFill" animation="{{animation}}"
           catchtouchstart="start" catchtouchend="end">
          </image>
     </view>
     <!-- 按钮部分 -->
     <view class="btn">
          <button bindtap="rotate" type="primary">旋转</button>
          <button bindtap="scale" type="primary">缩放</button>
          <button bindtap="translate" type="primary">移动</button>
          <button bindtap="skew" type="primary">倾斜</button> 
          <button bindtap="roateAndScale" type="primary">旋转并缩放</button>
          <button bindtap="roateThenScale" type="primary">旋转后缩</button>
          <button bindtap="all" type="primary">同时展示全部</button>
          <button bindtap="allOrder" type="primary">按顺序展示全部</button>
           <button bindtap="reset1"  type="primary">回到原始状态</button>
     </view>
</view>